<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/picnic" />
    <link rel="stylesheet" href="mystyles.css" />
  </head>
  <body>
    <nav>
      <a href="#" class="brand">
        <span> Oz Universities </span>
      </a>
      <div class="menu">
        <form style="display: flex; align-items: center">
          <input placeholder="Search Universities" />
          <input type="submit" value="search" />
        </form>
      </div>
    </nav>

    <div class="container" style="margin: 60px 0px 0px 20px">
      <div class="flex four myunis">
        <div><a href="/australia">Australia</a></div>
        <div><a href="/denmark">Denmark</a></div>
        <div><a href="/france">France</a></div>
        <div><a href="/usa">USA</a></div>
      </div>

      <h1>
        <% if (country !== 'united+states') { %> <%=
        country.charAt(0).toUpperCase() + country.slice(1) %> <% } else { %>
        United States <% } %>
      </h1>

      <% uni_data.forEach( (row)=> { %>
      <div
        style="
          display: flex;
          justify-content: space-between;
          align-items: center;
          margin-right: 50px;
        "
      >
        <h3><%= row.name %></h3>
        <a class="button" href="<%= row.web_pages[0] %>" target="_blank"
          >visit</a
        >
      </div>
      <% }); %>
    </div>
  </body>
</html>
